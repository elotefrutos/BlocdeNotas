<Window x:Class="BlocDeNotas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bloc de Notas" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Archivo">
                <MenuItem Header="Abrir" Click="AbrirArchivo"/>
                <MenuItem x:Name="Guardadito" Header="Guardar" IsEnabled="False" Click="GuardarArchivo"/>
            </MenuItem>
        </Menu>
        <StackPanel>
            <Button Content="Limpiar texto" Click="BorrarTexto" Margin="10" HorizontalAlignment="Left"/>
            <TextBox Name="txtEditor" TextChanged="txtEditor_TextChanged" AcceptsReturn="True" AcceptsTab="True" FontFamily="Consolas" FontSize="14" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="250"/>
        </StackPanel>
    </DockPanel>
</Window>
